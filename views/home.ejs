<% layout("layouts/boilerplate") %>

<style>
    .hero-section {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
        border-radius: 20px;
        padding: 3rem 2rem;
        margin-top: -3rem;
        position: relative;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 500px;
        height: 500px;
        background: rgba(255, 82, 76, 0.1);
        border-radius: 50%;
        z-index: 0;
    }

    .hero-section::after {
        content: '';
        position: absolute;
        bottom: -30%;
        left: -5%;
        width: 400px;
        height: 400px;
        background: rgba(255, 82, 76, 0.05);
        border-radius: 50%;
        z-index: 0;
    }

    .hero-content {
        text-align: center;
        z-index: 1;
        position: relative;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 700;
        color: #222;
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .hero-subtitle {
        font-size: 1.4rem;
        color: #555;
        margin-bottom: 3rem;
        font-weight: 400;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .cta-buttons {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-primary-custom {
        background-color: rgb(255, 82, 76);
        color: white;
        padding: 1rem 3rem;
        font-size: 1.1rem;
        border: none;
        border-radius: 50px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(255, 82, 76, 0.3);
    }

    .btn-primary-custom:hover {
        background-color: rgb(235, 62, 56);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(255, 82, 76, 0.4);
        color: white;
    }

    .btn-secondary-custom {
        background-color: white;
        color: rgb(255, 82, 76);
        padding: 1rem 3rem;
        font-size: 1.1rem;
        border: 2px solid rgb(255, 82, 76);
        border-radius: 50px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
    }

    .btn-secondary-custom:hover {
        background-color: rgb(255, 82, 76);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(255, 82, 76, 0.3);
    }

    .features-section {
        margin-top: 5rem;
        padding: 3rem 0;
    }

    .features-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 700;
        color: #222;
        margin-bottom: 3rem;
    }

    .feature-card {
        text-align: center;
        padding: 2rem;
        border-radius: 15px;
        transition: all 0.3s ease;
        background: white;
        border: 1px solid #f0f0f0;
    }

    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .feature-icon {
        font-size: 3rem;
        color: rgb(255, 82, 76);
        margin-bottom: 1.5rem;
    }

    .feature-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #222;
        margin-bottom: 1rem;
    }

    .feature-description {
        color: #666;
        font-size: 1rem;
        line-height: 1.6;
    }

    @media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }

        .hero-subtitle {
            font-size: 1.2rem;
        }

        .cta-buttons {
            flex-direction: column;
            align-items: center;
        }

        .btn-primary-custom,
        .btn-secondary-custom {
            width: 100%;
            max-width: 300px;
            justify-content: center;
        }
    }
</style>

<div class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">
            <i class="fa-solid fa-building"></i> Welcome to TravelBuddy
        </h1>
        <p class="hero-subtitle">
            Discover unique homes and experiences around the world. Find your perfect stay or share your space with travelers.
        </p>
        <div class="cta-buttons">
            <% if (!currUser) { %>
                <a href="/signup" class="btn-primary-custom">
                    <i class="fas fa-user-plus"></i> Create Account
                </a>
                <a href="/listings" class="btn-secondary-custom">
                    <i class="fas fa-search"></i> View Listings
                </a>
            <% } else { %>
                <a href="/listings/new" class="btn-primary-custom">
                    <i class="fas fa-plus-circle"></i> Add Listing
                </a>
                <a href="/listings" class="btn-secondary-custom">
                    <i class="fas fa-search"></i> Browse Listings
                </a>
            <% } %>
        </div>
    </div>
</div>

<div class="features-section">
    <h2 class="features-title">Why Choose TravelBuddy?</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-home"></i>
                </div>
                <h3 class="feature-title">Unique Stays</h3>
                <p class="feature-description">
                    From cozy apartments to luxury villas, find the perfect accommodation for your next adventure.
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3 class="feature-title">Secure Booking</h3>
                <p class="feature-description">
                    Book with confidence knowing your transactions are safe and your privacy is protected.
                </p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-globe"></i>
                </div>
                <h3 class="feature-title">Global Reach</h3>
                <p class="feature-description">
                    Explore destinations worldwide and connect with hosts from different cultures and backgrounds.
                </p>
            </div>
        </div>
    </div>
</div>
